<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/style.css">
    <title>Home - FoodFaster.ai</title>
</head>
<body>
    <%- include('navbar') %>
    <h1>Welcome to FoodFaster.ai</h1>

    <!-- Search bar for restaurant name -->
    <div class="search-container">
        <form action="/restaurants/search" method="get">
            <label for="query">Search Restaurants:</label>
            <input type="text" id="query" name="query" placeholder="Enter restaurant name..." autocomplete="off">
            <button type="submit">Search</button>
        </form>
    </div>

    <!-- Links to user, restaurant, and order management pages -->
    <a href="/users/create_user">Create User</a>
    <a href="/restaurants/create_restaurant">Create Restaurant</a>
    <a href="/restaurants/delete_restaurant">Delete Restaurant</a>
    <a href="/orders/search">Search Orders</a> <!-- Link to the new order search page -->

    <!-- Display a list of restaurants and their opening times -->
    <h2>Our Featured Restaurants</h2>
    <div id="restaurantList">
        <ul>
            <% restaurants.forEach(restaurant => { %>
                <li>
                    <a href="/restaurants/<%= restaurant._id %>"><%= restaurant.name %></a>
                    <p>Opening Times:</p>
                    <ul>
                        <% for (const [day, time] of Object.entries(restaurant.openingTimes)) { %>
                            <li><%= day %>: <%= time %></li>
                        <% } %>
                    </ul>
                </li>
            <% }) %>
        </ul>
    </div>
</body>
</html>
