<%- include('navbar') %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/style.css">
    <title>Delete Restaurant</title>
</head>
<body>
    <div id="delete">
        <h2 id="delete_title">Delete a Restaurant Listing</h2>
        <p>Select a restaurant to delete from the list below.</p>
        
        <!-- Restaurant List -->
        <ul id="restaurantList">
          <% restaurants.forEach(function(restaurant) { %>
            <li>
              <strong><%= restaurant.name %></strong> - <%= restaurant.location %> - <%= restaurant.phone_number %>
              <form action="/restaurants/delete_restaurant/<%= restaurant._id %>" method="POST" style="display:inline;">
                <button type="submit" onclick="return confirm('Are you sure you want to delete <%= restaurant.name %>?')">Delete</button>
              </form>
            </li>
          <% }); %>
        </ul>

        <a href="/">Back to Home</a>
    </div>
</body>
</html>
