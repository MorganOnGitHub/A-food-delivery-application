<%- include('admin_navbar') %>
<div id="results">
    <h2>Search Results</h2>
    <% if (users.length > 0) { %>
        <ul>
            <% users.forEach(function(user) { %>
                <li>
                    <strong>Name:</strong> <%= user.name %> <br>
                    <strong>Email:</strong> <%= user.email %> <br>
                    <p><strong>Phone:</strong> <%= user.phone_number %></p><br>
                    <% if (user.image) { %>
                      <p><strong>Image:</strong></p>
                      <img src="/<%= user.image %>" alt="User Image" width="200" />
                    <% } else { %>
                      <p>No image available.</p>
                    <% } %>
                </li>
            <% }) %>
        </ul>
    <% } else { %>
        <p>No users found.</p>
    <% } %>
    <a href="/search">Search Again</a>
</div>
